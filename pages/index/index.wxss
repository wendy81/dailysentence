/**index.wxss**/
.body-view {
	font-family: 'Charis SIL', 'Doulos SIL', Gentium, GentiumAlt, 'DejaVu Sans', Code2000, 'TITUS Cyberbit Basic', 'Arial Unicode MS', 'Lucida Sans Unicode', 'Chrysanthi Unicode';
	font-size: .75em;
	color: #000;
}
.audioBtn {
	display:block;
	position: absolute;
	top:14px;
	right:14px;
	z-index:999;
	filter: alpha(opacity=75);
	opacity: .75;	
}
.word-info {
	position: absolute;
	top:0;
	left:0;
	z-index:100;
	width:100%;
}
.word-info-content {
	padding:13px;
	background:#fff;
	filter: alpha(opacity=70);
	opacity: .70;
}
.word {
	padding-right:80px;
}
audio {
	position: absolute;
	top:-100px;
	right:0;
	filter: alpha(opacity=75);
	opacity: .75;	
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn-rember-not {
	position: absolute;
	top: 80px;
	right: 0;
}